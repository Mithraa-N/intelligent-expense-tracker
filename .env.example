# Intelligent Expense Tracker - Environment Configuration
# Copy this file to .env and customize as needed

# API Settings
API_TITLE=Intelligent Expense Tracker API
API_VERSION=1.0.0
API_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=True
LOG_LEVEL=info

# CORS Settings (comma-separated for multiple origins)
# Use * for development, specify exact origins for production
CORS_ORIGINS=*

# ML Model Settings
MIN_EXPENSES_FOR_FORECAST=10
DEFAULT_FORECAST_DAYS=30
ANOMALY_CONTAMINATION=0.1

# Data Settings
MAX_EXPENSES_IN_MEMORY=10000

# Development Settings
DEBUG=True

# --- Frontend Settings ---
# URL of the backend API (used by Vite)
VITE_API_URL=http://localhost:8000/api/v1
